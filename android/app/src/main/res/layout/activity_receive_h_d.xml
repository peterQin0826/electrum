<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onekey"
    tools:context="org.haobtc.onekey.onekeys.homepage.process.ReceiveHDActivity">
    <!--    分享布局-->
    <LinearLayout
        android:id="@+id/share_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/onekey"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="@dimen/dp_40"
            android:background="@drawable/white_back_tuo"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_type"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/dp_24"
                android:src="@drawable/token_btc" />

            <TextView
                android:id="@+id/text_send_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sp_16"
                android:text="@string/scan_send"
                android:textColor="@color/text_two"
                android:textSize="@dimen/sp_20" />

            <ImageView
                android:id="@+id/img_share_qrcode"
                android:layout_width="207dp"
                android:layout_height="207dp"
                android:layout_marginTop="@dimen/dp_20"
                android:background="#f1f1f1" />

            <TextView
                android:id="@+id/text_wallet_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_marginTop="@dimen/sp_15"
                android:text="@string/wallet_address"
                android:textColor="@color/text_six"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/text_wallet_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/sp_15"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_50"
                android:gravity="center_horizontal"
                android:textColor="@color/text_two"
                android:textSize="@dimen/sp_14"
                tools:text="ksfkendsmlmalkdjrbfsamskalhdknc" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_16"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="@string/recommended"
            android:textColor="@color/button_bk_ddake"
            android:textSize="27sp"
            app:drawableEndCompat="@drawable/logo_text" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/dp_40"
            android:src="@drawable/bixin_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_18"
            android:textColor="@color/button_bk_ddake"
            android:textSize="@dimen/sp_16"
            tools:text="download.onekey.so" />

    </LinearLayout>
    <!--    显示地址布局-->
    <RelativeLayout
        android:id="@+id/receive_payment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/onekey"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_20">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_10"
                android:src="@drawable/left_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="@string/receive"
                android:textColor="@color/button_bk_ddake"
                android:textSize="17sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RelativeLayout"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/white_back_tuo"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20">

                <ImageView
                    android:layout_width="@dimen/dp_21"
                    android:layout_height="@dimen/dp_21"
                    android:src="@drawable/token_btc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_6"
                    android:text="@string/scan_input"
                    android:textColor="@color/text_six"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <ImageView
                android:id="@+id/img_Orcode"
                android:layout_width="207dp"
                android:layout_height="207dp"
                android:layout_marginTop="27dp"
                android:background="#f1f1f1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_marginTop="@dimen/sp_15"
                android:text="@string/wallet_address"
                android:textColor="@color/text_six"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/text_receive_address"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/sp_15"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/text_two"
                android:textSize="@dimen/sp_14"
                tools:text="3MEtJZRVPawaRjX6R8BoXB7mMyAzmXNvn6" />

            <LinearLayout
                android:id="@+id/normal_layout"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="@drawable/laft_gray_tuo"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/verify_d"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_24"
                        android:drawablePadding="@dimen/dp_12"
                        android:gravity="center_vertical"
                        android:text="@string/verify"
                        android:textColor="#00B812"
                        android:textSize="@dimen/sp_14"
                        app:drawableStartCompat="@drawable/safe" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_copy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_24"
                        android:drawableStart="@drawable/copy_medium"
                        android:drawablePadding="@dimen/dp_12"
                        android:gravity="center_vertical"
                        android:text="@string/copy_"
                        android:textColor="@color/text_six"
                        android:textSize="@dimen/sp_14"
                        tools:ignore="UseCompatTextViewDrawableXml" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_share"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/share_img"
                        android:drawablePadding="@dimen/dp_12"
                        android:gravity="center_vertical"
                        android:text="@string/share"
                        android:textColor="@color/text_six"
                        android:textSize="@dimen/sp_14"
                        tools:ignore="UseCompatTextViewDrawableXml" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/need_verify_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/laft_green_tuo"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@id/verify_promote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginEnd="@dimen/dp_14"
                    android:text="@string/verify_promote"
                    android:textColor="#00B812"
                    android:textSize="@dimen/sp_14" />

                <Button
                    android:id="@+id/verify_start"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_28"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginBottom="@dimen/dp_9"
                    android:background="@drawable/btn_enable_selector"
                    android:drawableEnd="@drawable/right_white"
                    android:drawablePadding="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_20"
                    android:singleLine="true"
                    android:text="@string/verify_address_begin"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_80"
            android:src="@drawable/group_68" />

        <ImageView
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="38dp"
            android:src="@drawable/logo_text" />

    </RelativeLayout>
</RelativeLayout>