<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70">

    <ImageView
        android:id="@+id/iv_assets_logo"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_12"
        android:src="@drawable/token_btc" />

    <TextView
        android:id="@+id/tv_assets_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_toEndOf="@+id/iv_assets_logo"
        android:text="@string/btc_c"
        android:textColor="@color/text_two"
        android:textSize="@dimen/sp_16" />

    <ImageView
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:src="@drawable/right_arrow_small"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@+id/tv_assets_name"
        android:orientation="vertical">

        <org.haobtc.onekey.ui.widget.NumberTextView
            android:id="@+id/text_assets_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="end"
            android:text="@string/zero"
            android:textColor="@color/text_two"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text_assets_amount_stars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/star"
            android:textColor="@color/text_two"
            android:textSize="@dimen/sp_20"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_dollar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:gravity="end"
            android:text="@string/zero"
            android:textColor="@color/text_five"
            android:textSize="@dimen/sp_10"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text_assets_dollar_stars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:gravity="end"
            android:text="@string/star"
            android:textColor="@color/text_five"
            android:textSize="@dimen/sp_10"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>
