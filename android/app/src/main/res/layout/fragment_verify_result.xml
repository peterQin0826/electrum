<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/verify_ret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_51"
        android:background="@android:color/white"
        android:text="@string/verify_success"
        android:textColor="#00B812"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/verify_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_45"
        android:src="@drawable/device_success" />

    <TextView
        android:id="@+id/verify_wallet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/green_bacj"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp_15"
        android:paddingVertical="@dimen/dp_5"
        android:textAllCaps="false"
        android:textColor="@color/onekey"
        tools:text="K1921" />

    <TextView
        android:id="@+id/verify_promote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_42"
        android:gravity="center"
        android:text="@string/verify_success_hide"
        android:textColor="#546370"
        android:textSize="@dimen/sp_14" />

    <Button
        android:id="@+id/back"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="108dp"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/btn_enable_selector"
        android:text="@string/back_device"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_14" />

</LinearLayout>