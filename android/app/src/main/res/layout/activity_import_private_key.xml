<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_bk_ddake"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="org.haobtc.onekey.onekeys.dialog.recovery.importmethod.ImportPrivateKeyActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:src="@drawable/left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:text="@string/import_private_key"
            android:textColor="@color/text"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:id="@+id/img_scan"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_7"
            android:layout_marginEnd="@dimen/dp_20"
            android:src="@drawable/scan_right" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_marginTop="@dimen/dp_30"
                android:src="@drawable/token_btc" />

            <EditText
                android:id="@+id/edit_input_private"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginEnd="34dp"
                android:background="@drawable/gray_broken"
                android:hint="@string/imput_private_tip"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_10"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginEnd="34dp"
                android:text="@string/import_hd_tip"
                android:textColor="@color/text_two"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_30">


                <View
                    android:id="@+id/view"
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hd_tip1"
                        android:textColor="@color/text_three"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="@string/hd_tip2"
                        android:textColor="@color/text_three"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="@string/hd_tip3"
                        android:textColor="@color/text_three"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btn_import"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginStart="34dp"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="@dimen/dp_80"
                android:background="@drawable/btn_no_check"
                android:enabled="false"
                android:text="@string/imports"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_20" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>